<Window x:Class="conwayGameOfLife.premadeSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:conwayGameOfLife"
        mc:Ignorable="d"
        Title="premadeSelection" Height="450" Width="300">
    <Grid>
        <Label Content="Premade Selection:" Name="title" FontWeight="Bold" HorizontalAlignment="Left" Margin="34,0,0,0" VerticalAlignment="Top" Width="225" HorizontalContentAlignment="Center"/>

        <ListBox HorizontalAlignment="Center" Name="paternListBox" Height="115" Margin="34,31,34.6,0" VerticalAlignment="Top" Width="225" MouseDoubleClick="paternListBox_MouseDoubleClick"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="225" Margin="34,151,34.6,0" Stroke="Black" VerticalAlignment="Top" Width="225"/>
        <Image Name="previewImage" HorizontalAlignment="Center" Height="225" Margin="34,151,34.6,0" VerticalAlignment="Top" Width="225"/>
        <Button Content="Confirm" FontWeight="Bold" FontSize="12"  Name="Confirm" HorizontalAlignment="Center" Margin="0,381,0,0" VerticalAlignment="Top" Width="82" Height="29" Click="Confirm_Click"/>

    </Grid>
</Window>
